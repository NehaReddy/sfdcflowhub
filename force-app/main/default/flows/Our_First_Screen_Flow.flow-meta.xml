        <locationY>233</locationY>
        <allowBack>true</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>true</allowPause>
        <connector>
            <targetReference>Update_Lead</targetReference>
        </connector>
        <fields>
            <name>DisplayText2</name>
            <fieldText>&lt;p&gt;The Phone Number of  &lt;strong style=&quot;color: rgb(165, 54, 182);&quot;&gt;{!Get_Lead_Record.FirstName} &lt;/strong&gt;&lt;span style=&quot;color: rgb(24, 23, 24);&quot;&gt;is {!Get_Lead_Record.Phone}&lt;/span&gt;&lt;/p&gt;</fieldText>
